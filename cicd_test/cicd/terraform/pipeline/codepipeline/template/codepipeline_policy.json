{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowS3BucketAccess",
            "Effect": "Allow",
            "Action": [
                "s3:GetBucketVersioning",
                "s3:GetBucketAcl",
                "s3:GetBucketLocation"
            ],
            "Resource": [
                "arn:aws:s3:::${codepipeline_bucket}"
            ],
            "Condition": {
                "StringEquals": {
                    "aws:ResourceAccount": "${account_id}"
                }
            }
        },
        {
            "Sid": "AllowS3ObjectAccess",
            "Effect": "Allow",
            "Action": [
                "s3:PutObject",
                "s3:PutObjectAcl",
                "s3:GetObject",
                "s3:GetObjectVersion"
            ],
            "Resource": [
                "arn:aws:s3:::${codepipeline_bucket}/*"
            ],
            "Condition": {
                "StringEquals": {
                    "aws:ResourceAccount": "${account_id}"
                }
            }
        },
        {
           "Sid": "AllowCodebuildAccess",
           "Effect": "Allow",
           "Action" : [
              "codebuild:StartBuild",
              "codebuild:StopBuild",
              "codebuild:BatchGetBuilds"
            ],
            "Resource": [
                "${codebuild_arn}"
            ]
        }
    ]
}
